<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>
  </head>
  <body class="m-5">
    <h2>Welcome to <%= msg %></h2>
    <!-- <p><%=courses[0].title%></p> -->

    <div>
      <% courses.forEach(course=>{ %>
      <div class="card">
        <div class="card-header"><%=course.title %></div>
        <div class="card-body">
          <p class="card-text"><%=course.description %></p>
          <p class="card-text"><%=course.cost %></p>
          <p class="card-text"><%=course.author %></p>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
